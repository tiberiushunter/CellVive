<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MenuActivity"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:text="Cell Vive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:textColor="#FFC90E"
            android:textSize="96sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contentMenu"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:text="Play"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtVNewGame"
                    android:textSize="36sp"
                    android:textColor="#ff0000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:onClick="onClickPlay"
                    android:clickable="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="High Scores"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txtVHighScore"
                            android:textSize="36sp"
                            android:textColor="#ff0000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:onClick="onClickHighScore"
                            android:clickable="true"
                            android:layout_weight="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="About"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txtVAbout"
                            android:textSize="36sp"
                            android:textColor="#ff0000"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:onClick="onClickAbout"
                            android:clickable="true"
                            android:layout_weight="1" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </GridLayout>

</RelativeLayout>
