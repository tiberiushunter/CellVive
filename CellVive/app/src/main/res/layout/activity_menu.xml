<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sta404.cellvive.MenuActivity"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVAbout"
            android:textSize="14pt"
            android:textColor="#ff0000"
            android:textAlignment="viewStart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="39dp" />

        <TextView
            android:text="Rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVRate"
            android:textSize="14pt"
            android:textColor="#ff0000"
            android:textAlignment="viewEnd"
            android:layout_alignBaseline="@+id/txtVAbout"
            android:layout_alignBottom="@+id/txtVAbout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="133dp" />

        <TextView
            android:text="High Scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVHighScore"
            android:textSize="14pt"
            android:textColor="#ff0000"
            android:textAlignment="viewStart"
            android:onClick="onClickHighScore"
            android:clickable="true"
            android:layout_marginEnd="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtVNewGame" />

        <TextView
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVNewGame"
            android:textSize="14pt"
            android:textColor="#ff0000"
            android:textAlignment="viewEnd"
            android:onClick="onClickPlay"
            android:clickable="true"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/txtVRate"
            android:layout_alignEnd="@+id/txtVRate"
            android:layout_alignStart="@+id/txtVRate" />

        <TextView
            android:text="Cell Vive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:textColor="#00ff00"
            android:textSize="96sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

    </RelativeLayout>
</RelativeLayout>
